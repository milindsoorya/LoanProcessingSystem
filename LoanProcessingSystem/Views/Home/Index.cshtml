<!-- CSS only -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Images/image6.png" alt="firstImage" style=" width:100%;height:500px;">
            <div class="carousel-caption">
                <h2 class="animated fadeInRight" style="font-size:100px; letter-spacing:1rem;">Easy</h2>
                <p class="animated fadeInRight" style="font-size:18px;">Streamline all phases of the loan process to close more loans, faster!</p>
                <p class="animated fadeInUp"><a href="../Home/Plans" class="btn btn-transparent btn-rounded btn-large">Learn More</a></p>
            </div>
        </div>

        <div class="item">
            <img src="~/Images/m3.png" alt="SecondImage" style="width:100%;height:500px;">
            <div class="carousel-caption">
                <h2 class="animated fadeInRight" style="font-size:100px; letter-spacing:1rem;">Accurate</h2>
                <p class="animated fadeInRight" style="font-size:18px;">Mortgages are complicated. Mortgage software shouldn't be. </p>
                <p class="animated fadeInUp"><a href="../Home/Plans" class="btn btn-transparent btn-rounded btn-large">Learn More</a></p>
            </div>
        </div>

        <div class="item">
            <img src="~/Images/me2.png" alt="ThirdImage" style="width:100%;height:500px;">
            <div class="carousel-caption">
                <h2 class="animated fadeInDown" style="font-size:100px; letter-spacing:1rem;">Efficient</h2>
                <p class="animated fadeInRight" style="font-size:18px;">Complex process, meet streamlined solution.</p>
                <p class="animated fadeInUp"><a href="../Home/Plans" class="btn btn-transparent btn-rounded btn-large">Learn More</a></p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->

</div>

<script>
    $("#myCarousel").carousel();

    // Enable Carousel Indicators
    $(".item").click(function () {
        $("#myCarousel").carousel(1);
    });

    // Enable Carousel Controls
    $(".left").click(function () {
        $("#myCarousel").carousel("prev");
    });
</script>





















